<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id = "WebServiceServer" class = "org.eclipse.jetty.server.Server">
	<Set name="threadPool">
    	<New class="org.eclipse.jetty.util.thread.QueuedThreadPool">
	    	<Set name="minThreads">10</Set>
	    	<Set name="maxThreads">200</Set>
	    	<Set name="detailedDump">false</Set>
    	</New>
    </Set>
	<Call name="addConnector">
    	<Arg>
        	<New class="org.eclipse.jetty.server.nio.SelectChannelConnector">
        		<Set name="port">8080</Set>
        	</New>
      	</Arg>
    </Call>
    <Set name="handler">
        <New class="org.eclipse.jetty.server.handler.HandlerList">
            <Set name="handlers">
                <Array type="org.eclipse.jetty.server.Handler">
                    <Item>
                        <New class = "org.eclipse.jetty.servlet.ServletContextHandler">
                            <Arg><Get class="org.eclipse.jetty.servlet.ServletContextHandler" name="SESSIONS"/></Arg>
                            <Set name = "contextPath">/</Set>
                            <Call name = "addServlet">
                                <Arg>
                                    <New class = "org.eclipse.jetty.servlet.ServletHolder">
                                        <Arg>WebServiceApplicationServlet</Arg>
                                        <Arg>
                                            <New class = "org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher"></New>
                                        </Arg>
                                        <Set name="initOrder">1</Set>
                                        <Call name="setInitParameter">
                                            <Arg>javax.ws.rs.Application</Arg>
                                            <Arg>org.kimrgrey.neural.rest.WebServiceApplication</Arg>
                                        </Call>
                                    </New>
                                </Arg>
                                <Arg>/api/*</Arg>
                            </Call>
                        </New>
                    </Item>
                    <Item>
                        <New class="org.eclipse.jetty.server.handler.ResourceHandler">
                            <Set name="directoriesListed">true</Set>
                            <Set name="welcomeFiles">
                                <Array type="String"><Item>index.html</Item></Array>
                            </Set>
                            <Set name="resourceBase">.</Set>
                        </New>
                    </Item>
                    <Item>
                        <New class="org.eclipse.jetty.server.handler.DefaultHandler"></New>
                    </Item>
                </Array>
            </Set>
        </New>
    </Set>
</Configure>